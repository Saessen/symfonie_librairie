{% extends 'base.html.twig' %}

{% block title %}Home {% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Home index</h1>
        <a href="{{ path('home_new')}}" class="btn btn-dark btn_list">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Signature</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>{{ home.id }}</td>
                <td>{{ home.titre }}</td>
                <td>{{ home.texte }}</td>
                <td>{{ home.signature }}</td>
                <td>{{ home.active ? 'Yes' : 'No' }}</td>
                <td>
                   <div class="d-flex">
                        <a href="{{ path('home_show', {'id': home.id}) }}" class="btn btn-dark btn_list me-2"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('home_edit', {'id': home.id}) }}" class="btn btn-dark btn_list"><i class="far fa-edit"></i></a>
                   </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
