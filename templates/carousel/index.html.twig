{% extends 'base.html.twig' %}

{% block title %}Carousel index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Carousel index</h1>
        <a href="{{ path('carousel_new')}}" class="btn btn-dark btn_list">Cr√©er nouveau</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td>{{ carousel.id }}</td>
                <td>{{ carousel.nom }}</td>
                <td><img src="{{ asset('images/carousels/' ~ carousel.image) }}" class="admin-img-fluid" alt=""></td>
                <td>{{ carousel.titre }}</td>
                <td>{{ carousel.texte }}</td>
                <td>{{ carousel.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a href="{{ path('carousel_show', {'id': carousel.id}) }}" class="btn btn-dark btn_list me-2"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('carousel_edit', {'id': carousel.id}) }}" class="btn btn-dark btn_list"><i class="far fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
